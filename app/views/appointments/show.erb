<div class="well">
  <div class="centered">
	 <h3>Detalles del turno:</h3>
    <p>Dr/a.: <%= @appointment.medic %></p>
    <p>Fecha: <%= @appointment.date_and_hour.to_s[0..9] %></p>
    <p>Hora: <%= @appointment.date_and_hour.to_s[11..15] %></p>

		<% if @rol == "Turno Asignado" %>	
			<p>Nombre del paciente: <%= @appointment.patient_name %></p>
			<a href="/appointments/new" class = "btn btn-primary" id="returnNew">Nuevo Turno</a> 
		<% else %>	
			<p>Duraci√≥n: <%= @appointment.duration %> minutos.</p>
			<a href="/appointments/new_pending_appointment" class = "btn btn-primary" id="PendingAppointmentNew">Crear Nuevo Turno Disponible</a> 
		<% end %>
  </div>
</div>
